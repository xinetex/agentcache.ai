# AgentCache.ai Configuration

# Server
PORT=8787
NODE_ENV=production

# Redis (Upstash recommended)
REDIS_URL=rediss://default:YOUR_PASSWORD@your-redis.upstash.io:6379
UPSTASH_REDIS_URL=rediss://default:YOUR_PASSWORD@your-redis.upstash.io:6379

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:pass@host.neon.tech/agentcache?sslmode=require

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs
STRIPE_PRICE_STARTER_MONTHLY=price_...
STRIPE_PRICE_STARTER_YEARLY=price_...
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
STRIPE_PRICE_ENTERPRISE_YEARLY=price_...

# JWT Secret
JWT_SECRET=your-super-secret-key-change-this

# SendGrid (optional - for email notifications)
SENDGRID_API_KEY=SG.xxx
SENDGRID_FROM_EMAIL=support@agentcache.ai

# Moonshot AI (Kimi K2) - optional for reasoning token caching
MOONSHOT_API_KEY=your_moonshot_api_key
MOONSHOT_ORG_ID=org-xxx

# Vercel Integration (for 1-click install)
VERCEL_CLIENT_ID=oac_...
VERCEL_CLIENT_SECRET=...
PUBLIC_URL=https://agentcache.ai

# Seagate Lyve Cloud (S3-compatible storage)
# For presigned URL generation and S3 API compatibility
LYVE_ACCESS_KEY_ID=your-lyve-access-key
LYVE_SECRET_ACCESS_KEY=your-lyve-secret-key
LYVE_ENDPOINT=https://s3.us-east-1.lyvecloud.seagate.com
LYVE_BUCKET=jettydata-prod
LYVE_REGION=us-east-1
# IMPORTANT: Region in endpoint URL must match LYVE_REGION

# JettyThunder Storage (for video origin)
JETTYTHUNDER_S3_ENDPOINT=https://your-jettythunder-endpoint.com
JETTYTHUNDER_ACCESS_KEY=your-access-key
JETTYTHUNDER_SECRET_KEY=your-secret-key
JETTYTHUNDER_BUCKET=audio1-videos

# CDN Configuration (Audio1.TV)
CDN_L1_MAX_SIZE=104857600   # 100MB in-memory cache
CDN_L1_TTL=300000           # 5 minutes
CDN_L2_TTL=3600             # 1 hour in Redis
